{
  "name": "gwc-frontend",
  "version": "1.0.0",
  "description": "Groovy WebConsole Frontend",
  "scripts": {
    "build": "rsbuild build --env-mode=production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:ui": "cypress run",
    "serve-remote": "rsbuild dev --env-mode=production",
    "serve-local": "rsbuild dev --env-mode=development",
    "lint": "eslint src/ts/** cypress/**/*.ts",
    "lint-fix": "eslint --fix src/ts/** cypress/**/*.ts",
    "ci": "start-server-and-test serve-remote http://localhost:9000 test:ui"
  },
  "keywords": [
    "groovy",
    "spock",
    "webconsole"
  ],
  "contributors": [
